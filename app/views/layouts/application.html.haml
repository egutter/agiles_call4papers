!!! Strict
%html{html_attrs(I18n.locale)}
  
  %head
    %title
      #{AppConfig[:conference_name]} -
      = (yield(:title) || t('title.untitled'))
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %link{"rel" => "shortcut icon", "href" => "/favicon.ico"}/
    = stylesheet_link_tag '/css/bootstrap.min.css', '/css/bootstrap-responsive.min.css', '/css/font-awesome.min.css', '/css/app.css', :cache => true
    = javascript_include_tag '/js/jquery-1.9.1.min.js', '/js/bootstrap.min.js', '/js/application.js', '/js/jquery.autocomplete.min.js', '/js/jquery.textarearesizer.js', '/js/jquery.progressbar.min.js', '/facebox/facebox.js' , :cache => true
    
    = yield(:head)
  
  %body    
    .container
      .row
        .span10.offset1
          .row
            .span3
              = link_to image_tag('/img/logo.png'), root_path
            .span5.right             
              %strong.right Buenos Aires, 11-13 Oct/2012
              %br
              %br
              %ul.nav.nav-pills.right#languages
                %li= link_to "Español", "?locale=es"
                %li= link_to "Português", "?locale=pt"
                %li= link_to "English", "?locale=en"
      .row
        .span10.offset1
          = render :partial => 'layouts/menu'
      
      .row 
      - if show_actions?
        .span3.offset1.cont
          = render :partial => 'layouts/actions'
        .span6.cont
          - flash.each do |name, msg|
            = content_tag :div, msg + content_tag(:button, "&times;", :type => "button", :class => "close", "data-dismiss" => "alert"), :id => "flash_#{name}", :class => "alert alert-success"
              
              
        
          - if show_title?
            %h1= yield(:title)         
        
          = yield
                    
      .row
        .span10.offset1
          %hr
          #footer Copyleft - #{AppConfig[:conference_name]} - #{t('footer.help')}

    - unless AppConfig[:tracker_id].nil?
      :javascript
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      :javascript
        try{
          var pageTracker = _gat._getTracker("UA-#{AppConfig[:tracker_id]}");
          pageTracker._trackPageview();
        } catch(err) {}
    :javascript
      $(document).ready(function() {
        $('textarea').TextAreaResizer();
        var errorInput = $('li.error :input:visible:enabled:first');
        if (errorInput.length > 0) {
          errorInput.focus();
        } else if ($('.auto_focus').length > 0) {
          $(':input:visible:enabled:first').focus();
        }
      })